extends admin_layout

block title
    title 新文章
block area
    span 新文章

block extra_css
    link(rel='stylesheet', href='#{assets.server}/css/codemirror.css')

block main
    .post-area
        .post-head
            input(type='text', name='title', placeholder='文章标题')/
            select
                - each cate in categories
                    option(value='#{cate.name}') #{cate.name}
        .post-editor
            textarea#editor
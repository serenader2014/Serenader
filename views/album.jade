extends layout
block extra_script
    script(src='/js/jssor.slider.min.js', type='text/javascript')
    script.
        $("#album").width($("body").width()).height($("body").height());
        $("#container").width($("body").width()).height($("body").height());
        var options = {
            $ThumbnailNavigatorOptions: {
                $Class: $JssorThumbnailNavigator$,
                $ChanceToShow: 2
            }
        }

        var album = new $JssorSlider$('album', options);
block content
    div#album(style='position: relative; top: 0; left: 0; width: 100%; height: 100%')
        div#container(u='slides', style='cursor: move; position: absolute; overflow: hidden; left: 0; top: 0; width: 100%; height: 100%')
            - images.forEach(function (item, index) {
                div
                    img(u='image', src='#{item.path}', title='#{item.desc}', style='width:100%;height:100%')
                    - var thumbPath = item.path.substring(0, item.path.lastIndexOf('/')) + '/thumbnail' + item.path.substring(item.path.lastIndexOf('/'))
                    img(u='thumb', src='#{thumbPath}')
            - })
        div.jssort11(u='thumbnavigator', style='cursor: default; position: absolute; width: 100%; height: 60px; left: 0; bottom: 0;')
            div(style='background-color: #000; filter: alpha(opacity=30); opacity: 0.3; width: 100%; height: 100%;')
                style.
                    .jssort11 .p .t {
                        FILTER: alpha(opacity=45);
                        opacity: .45;
                        transition: opacity .6s;
                        -moz-transition: opacity .6s;
                        -webkit-transition: opacity .6s;
                        -o-transition: opacity .6s;
                    }

                    .jssort11 .pav .t, .jssort11 .pav:hover .t, .jssort11 .p:hover .t {
                        FILTER: alpha(opacity=100);
                        opacity: 1;
                        transition: none;
                        -moz-transition: none;
                        -webkit-transition: none;
                        -o-transition: none;
                    }
                div(u='sliders', style='cursor: move')
                    div(u='prototype', class='p', style='position: absolute; width: 60px; height: 30px; top: 0; left: 0;')
                        thumbnailtemplate(class='t', style='width: 60px; height: 30px; border: none; position: absolute; top: 0; left: 0')
                    
